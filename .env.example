# =========================
# apps/web (Next.js)
# =========================
# Leave empty to auto-connect to same-origin (recommended for production behind reverse proxy).
# Set explicit URL only when web and socket server are on different origins.
NEXT_PUBLIC_SERVER_URL=

# =========================
# apps/server (Node + Socket.io)
# =========================
PORT=4100
# Comma-separated origins. Example:
# CORS_ORIGINS=https://game.example.com,https://admin.example.com
# Use * only in trusted internal/dev environments.
CORS_ORIGINS=http://localhost:3000
WORD_SERVICE_URL=http://127.0.0.1:4201
WORD_SERVICE_TIMEOUT_MS=1500

# =========================
# apps/word-service (Flask)
# =========================
# NOTE: run this service with its own env context.
# If you deploy both services separately, this PORT should be 4201 (not 4100).
# PORT=4201
MAX_K=50
# FASTTEXT_MODEL_PATH=/absolute/path/to/cc.zh.100.bin
FASTTEXT_MODEL_PATH=
